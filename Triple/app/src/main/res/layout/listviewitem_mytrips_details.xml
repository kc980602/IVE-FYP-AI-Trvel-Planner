<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:src="@drawable/a3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_attId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_attName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Japanese Temple"
                android:textColor="@color/textPrimary"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_rate"
                    android:layout_width="90dp"
                    android:layout_height="16dp"
                    android:scaleType="fitStart"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_rate0" />

                <TextView
                    android:id="@+id/tv_attReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2048 Reviews"
                    android:textColor="@color/textSecondary"
                    android:textSize="13dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_attAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Japan, Tokyo"
                android:textColor="@color/textSecondary"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_attType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Land Mark"
                android:textColor="@color/textSecondary"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>