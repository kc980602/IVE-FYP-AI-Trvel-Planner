<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.triple.triple.Search.SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <!-- body section -->
        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_center_viewpager" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_rate0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_rate1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_rate2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_rate3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_rate4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_rate5" />
            </LinearLayout>


        </RelativeLayout>

        <!-- bottom navigation -->
        <include layout="@layout/layout_bottom_navigation_view" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>